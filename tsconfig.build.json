{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx", 
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx", 
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "src/test/**/*",
    "**/__tests__/**/*",
    "**/__mocks__/**/*",
    "**/*.config.ts",
    "**/*.config.js",
    "**/*.config.mjs",
    ".next",
    "out"
  ]
}
