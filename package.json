{
  "name": "professional-frequency-generator",
  "version": "1.0.0",
  "description": "Professional-grade frequency generator and audio signal tester built with Next.js, React, and Web Audio API",
  "author": {
    "name": "Dragos",
    "url": "https://github.com/dragoscv"
  },
  "license": "MIT",
  "homepage": "https://fq-generator.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/dragoscv/fq-generator.git"
  },
  "bugs": {
    "url": "https://github.com/dragoscv/fq-generator/issues"
  },
  "keywords": [
    "frequency-generator",
    "tone-generator",
    "audio-signal-generator",
    "web-audio-api",
    "sine-wave",
    "square-wave",
    "sawtooth-wave",
    "triangle-wave",
    "audio-testing",
    "sound-calibration",
    "nextjs",
    "react",
    "typescript",
    "tailwindcss"
  ],
  "private": false,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:run && npm run test:e2e",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "vercel-build": "npm run build",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "clean": "rm -rf .next out dist"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@types/d3": "^7.4.3",
    "@types/webaudioapi": "^0.0.27",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "d3": "^7.9.0",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.536.0",
    "next": "15.4.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "recharts": "^3.1.0",
    "tailwind-merge": "^3.3.1",
    "tone": "^15.1.22",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "jsdom": "^26.1.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
